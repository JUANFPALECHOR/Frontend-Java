{
  "compilerOptions": {
    "target": "es2015",                      // Mantén el target en ES2015 o superior
    "module": "esnext",                      // Cambiado a esnext para soportar ESM (ECMAScript Modules)
    "esModuleInterop": true,                 // Ya está correcto
    "moduleResolution": "node",              // Resolver módulos usando el sistema node
    "emitDecoratorMetadata": true,           // Decoradores son necesarios para Angular
    "experimentalDecorators": true,          // Decoradores experimentales
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "downlevelIteration": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],                // Soporte para ES2018 y APIs del navegador
    "allowJs": true,      
    "baseUrl": "src",                    // Permitir archivos JS
    "resolveJsonModule": true                // Si necesitas procesar archivos JSON
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
